{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declarationDir": "./types",
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "jsx": "preserve",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "vite-plugin-pwa/client",
      "vite-plugin-pwa/info",
      "vite/client",
      "jest",
      "chrome"
    ],
    "lib": [
      "ESNext",
      "DOM",
      "WebWorker",
      "DOM.Iterable"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "src/main_offline.ts",
  ]
}
